<h1>Listing episodes</h1>

<table>
  <tr>
    <th>Tvdb</th>
    <th>Season no</th>
    <th>Episode no</th>
    <th>Episode name</th>
    <th>First aired</th>
    <th>Overview</th>
    <th>Last update</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @episodes.each do |episode| %>
  <tr>
    <td><%= episode.tvdb_id %></td>
    <td><%= episode.season_no %></td>
    <td><%= episode.episode_no %></td>
    <td><%= episode.episode_name %></td>
    <td><%= episode.first_aired %></td>
    <td><%= episode.overview %></td>
    <td><%= episode.last_update %></td>
    <td><%= link_to 'Show', episode %></td>
    <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
    <td><%= link_to 'Destroy', episode, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

